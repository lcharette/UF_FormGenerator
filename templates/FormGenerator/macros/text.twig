{% macro generate(name, value) %}
    <div class="input-group">
        {% if value.icon %}<span class="input-group-addon"><i class="fa {{value.icon}}"></i></span>{% endif %}
        <input type="{{value.type}}" class="{% if value.class %}{{value.class}}{% else %}form-control{% endif %}" name="{{value.name}}" autocomplete="off" value="{{value.data}}" placeholder="{{translate(value.placeholder)}}" {% if value.disabled %}disabled{% endif %} {% for cName, cValue in value.custom %}{{cName}}="{{cValue}}" {% endfor %}></input>
    </div>
{% endmacro %}